key_shift_window_to_workspace_9: DefaultMod+Shift+F9


# multi head: switching and moving clients
key_switch_to_screen_0: DefaultMod+z
key_switch_to_screen_1: DefaultMod+e
key_switch_to_screen_2: DefaultMod+r
key_shift_window_to_screen_0: DefaultMod+Shift+z
