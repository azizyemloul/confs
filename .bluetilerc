key_shift_window_to_workspace_0: DefaultMod+Shift+F10
key_shift_window_to_workspace_1: DefaultMod+Shift+F1
key_shift_window_to_workspace_2: DefaultMod+Shift+F2
key_shift_window_to_workspace_3: DefaultMod+Shift+F3
